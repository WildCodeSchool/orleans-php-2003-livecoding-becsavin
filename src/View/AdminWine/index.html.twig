            <thead class="thead-dark">
                <tr>
                    <th>Nom</th>
                    <th>Couleur</th>
                    <th>Producteur</th>
                    <th>Ann√©e</th>
                </tr>
            </thead>
            <tbody>
        {% for wine in wines %}
