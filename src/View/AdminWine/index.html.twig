{% extends 'layout.html.twig' %}

{% block title %}Administrer les vins{% endblock %}

{% block content %}
    <main class="container">
        <h1>Administrer les vins</h1>
        <a class="btn-primary btn" href="/adminWine/add">Ajouter un vin</a>
        {% for region, wines in winesGroupByRegions %}
            <h2>{{ region }}</h2>
            {% for wine in wines %}
                <div class="d-flex justify-content-between wine">
                    <div class="d-flex wine-info">
                        <span class="color" style="--wine-color: {{ wine.color }}"></span>
                        <span>{{ wine.name }}</span>
                        <span>{{ wine.producer }}</span>
                        <span>{{ wine.year }}</span>
{#                        <img src="../uploads/{{ wine.image }}" alt="{{ wine.name }}">#}
                    </div>
                    <div class="dot"></div>
                    <div>
                        {{ wine.price }} â‚¬
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </main>
{% endblock %}
